@model ML.Alumno
@{
    ViewBag.Title = "AsignarMateria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
@Scripts.Render("~/bundles/jquery")
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

<h2 class="text-center">Asignar materia</h2>
<hr />
<div class="text-center">
    <table class="table table-dark table-hover" id="myTable">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Apellido paterno</th>
                <th class="text-center">Apellido materno</th>
                <th class="text-center">Asignar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Alumno alumno in Model.Alumnos)
            {
                <tr>
                    <td>@alumno.Nombre</td>
                    <td>@alumno.ApellidoPaterno</td>
                    <td>@alumno.ApellidoMaterno</td>
                    <td><a class="btn btn-warning" href="@Url.Action("GetMateriasAsignadas", "AsignarMateria", new {idAlumno = alumno.IdAlumno, nombre = alumno.Nombre+" "+alumno.ApellidoPaterno+" "+alumno.ApellidoMaterno})"><i class="fa-solid fa-file-circle-plus"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    let table = new DataTable('#myTable', {
        reponsive: true,
        "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "Todos"]],
        searching: false,
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
        },
    });

</script>
